<div class="comment">
    <p>
        <strong>Usuario:</strong>
        <%= comment.user.email %>
    </p>    

    <p>
        <strong>Comentario:</strong>
        <%= comment.body %>
    </p>
    <p>
        <strong>Updated at:</strong>
        <%= time_tag comment.updated_at, 
        "data-local": "time", 
        "data-format": "%-d de %B %H:%M" %>
    </p>
</div>

